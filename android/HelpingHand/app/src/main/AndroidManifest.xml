<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.unl.fct.di.apdc.helpinghand">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".HelpingHandApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelpingHand">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".ui.loading.StartUserActivity">
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity">
        </activity>
        <activity
            android:name=".ui.loading.LoadingScreenActivity"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.HomePageActivity">
        </activity>


    </application>

</manifest>